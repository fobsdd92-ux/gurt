<!doctype html>
<html>
<head><meta charset="utf-8"><title>Dashboard</title></head>
<body>
  <h1>Dashboard</h1>
  <p>Logged in as <%= user.username %> | <a href="/logout">Logout</a></p>
  <% if (!owner) { %>
    <p><strong>Note:</strong> You are not the server owner. Only the server owner can change settings here.</p>
  <% } %>
  <h2>Permissions</h2>
  <form method="post" action="/dashboard/permissions/add">
    <label>Command: <input name="command" required></label><br>
    <label>Role ID to add: <input name="role"></label><br>
    <label>User ID to add: <input name="user"></label><br>
    <button type="submit">Add Permission (owner only)</button>
  </form>
  <h3>Current Permissions</h3>
  <pre><%= JSON.stringify(perms, null, 2) %></pre>
  <h2>Create Embed</h2>
  <form method="post" action="/dashboard/embed/create">
    <label>Channel ID to post to: <input name="channel" required></label><br>
    <label>Title: <input name="title"></label><br>
    <label>Description: <textarea name="description"></textarea></label><br>
    <label>Color hex: <input name="color"></label><br>
    <label>Footer: <input name="footer"></label><br>
    <label>Image URL: <input name="image"></label><br>
    <label>Thumbnail URL: <input name="thumbnail"></label><br>
    <label>Author name: <input name="author"></label><br>
    <label>Author icon URL: <input name="authoricon"></label><br>
    <button type="submit">Save Embed to DB (owner only)</button>
  </form>
  <h2>Create Private Button</h2>
  <form method="post" action="/dashboard/button/create">
    <label>Label: <input name="label" required></label><br>
    <label>Private Text: <textarea name="text" required></textarea></label><br>
    <button type="submit">Create Button (owner only)</button>
  </form>
</body>
</html>
